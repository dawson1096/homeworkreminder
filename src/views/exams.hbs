    <a class="nav-item nav-link" href="/homeworks">Homeworks</a>
    <a class="nav-item nav-link active" href="/exams">Exams</a>
    <a class="nav-item nav-link" href="/classes">Classes</a>
    <a class="nav-item nav-link" href="/logout">Logout</a>
</nav>
